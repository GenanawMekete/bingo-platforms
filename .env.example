# ============================================
# GEEZ BINGO PLATFORM - ENVIRONMENT VARIABLES
# ============================================

# Deployment Environment
NODE_ENV=production

# Domain Configuration
DOMAIN=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
FRONTEND_URL=https://yourdomain.com
WEB_APP_URL=https://bingo.yourdomain.com
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_SECRET=your_webhook_secret_key

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=geezbingo
DB_USER=postgres
DB_PASSWORD=your_database_password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password

# Backend Configuration
PORT=5000
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d
CRYPTO_SECRET=your_encryption_secret_key

# Game Configuration
BET_AMOUNT=10.00
HOUSE_FEE=0.05
GAME_DURATION=180
COUNTDOWN_DURATION=30
MAX_CARDS_PER_PLAYER=5
MIN_PLAYERS=1

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:AAHdqTcvCH1vGWJxfSeofSAs0K5PALDsaw
TELEGRAM_BOT_USERNAME=geez_bingo_bot
TELEGRAM_BOT_PORT=3001

# Frontend Configuration
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_WS_URL=wss://yourdomain.com
REACT_APP_TELEGRAM_BOT=@geez_bingo_bot

# Crypto Payment Configuration (Optional)
CRYPTO_PROVIDER=binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
TRONGRID_API_KEY=your_trongrid_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Monitoring
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_PASSWORD=your_prometheus_password

# Security
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
CLOUD_BACKUP_ENABLED=false
RCLONE_REMOTE=your_remote_name

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
